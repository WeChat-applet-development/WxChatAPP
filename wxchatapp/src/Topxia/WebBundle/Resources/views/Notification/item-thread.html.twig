<li class="media">
  <div class="pull-left">
    <span class="glyphicon glyphicon-volume-down media-object"></span>
  </div>
  <div class="media-body">
    <div class="notification-body">
      {% set data = notification.content %}
      <a href="{{ path('user_show', {id:data.threadUserId}) }}" target="_blank">{{ data.threadUserNickname }}</a>
      在产品 <a href="{{ path('course_show', {id:data.courseId}) }}">{{ data.courseTitle|purify_html  }}</a>
      发表了{% if data.threadType == 'question' %}问题{% else %}话题{% endif %}
      <a href="{{ path('course_thread_show', {courseId:data.courseId, id:data.threadId}) }}"  target="_blank">{{ data.threadTitle|purify_html }}</a>。
    </div>
    <div class="notification-footer">
      {{ notification.createdTime | date('Y-n-d H:i:s') }}
    </div>
  </div>
</li>